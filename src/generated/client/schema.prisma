generator client {
  provider      = "prisma-client-js"
  engineType    = "library"
  binaryTargets = ["native", "windows"]
  output        = "../src/generated/client"
}

datasource db {
  provider = "sqlite"
}

model User {
  id             String          @id @default(cuid())
  name           String
  email          String          @unique
  password       String
  role           Role            @default(EMPLOYEE)
  customers      Customer[]
  leads          Lead[]
  activities     Activity[]
  tickets        Ticket[]
  ticketMessages TicketMessage[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

enum Role {
  ADMIN
  EMPLOYEE
}

model Customer {
  id         String     @id @default(cuid())
  name       String
  phone      String?
  email      String?
  address    String?
  company    String?
  userId     String
  user       User       @relation(fields: [userId], references: [id])
  activities Activity[]
  tickets    Ticket[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Lead {
  id         String     @id @default(cuid())
  name       String
  phone      String?
  email      String?
  address    String?
  company    String?
  status     LeadStatus @default(NEW)
  userId     String
  user       User       @relation(fields: [userId], references: [id])
  activities Activity[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

enum LeadStatus {
  NEW
  UNDER_FOLLOWUP
  INTERESTED
  CONVERTED
}

model Activity {
  id           String       @id @default(cuid())
  type         ActivityType
  content      String
  customerId   String?
  customer     Customer?    @relation(fields: [customerId], references: [id])
  leadId       String?
  lead         Lead?        @relation(fields: [leadId], references: [id])
  userId       String
  user         User         @relation(fields: [userId], references: [id])
  reminderDate DateTime?
  createdAt    DateTime     @default(now())
}

enum ActivityType {
  WHATSAPP
  EMAIL
  CALL
  NOTE
  TASK
}

model Ticket {
  id          String          @id @default(cuid())
  customerId  String
  customer    Customer        @relation(fields: [customerId], references: [id])
  title       String
  description String
  type        String?
  priority    TicketPriority  @default(MEDIUM)
  status      TicketStatus    @default(OPEN)
  userId      String
  user        User            @relation(fields: [userId], references: [id])
  messages    TicketMessage[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

model TicketMessage {
  id        String   @id @default(cuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
